// Aggregate for at hente alle albums med tilh√∏rende sange
db.albums.aggregate([
  {
    $lookup: {
      from: "songs",
      localField: "_id",
      foreignField: "albumId",
      as: "songs"
    }
  }
])

// Aggregate for at hente alle songs med artist info
db.songs.aggregate([
  {
    $lookup: {
      from: "artists",
      localField: "artistId",
      foreignField: "_id",
      as: "artistInfo"
    }
  }
])

db.songs.aggregate([
  {
    $lookup: {
      from: "artists",
      localField: "artistId",
      foreignField: "_id",
      as: "artistInfo"
    }
  },
  {
    $unwind: "$artistInfo"
  }
])

// Aggregate for at hente alle sange med tilh√∏rende kunstneroplysninger i en flad struktur med alle felter p√• samme niveau
db.songs.aggregate([
  {
    $lookup: {
      from: "artists",
      localField: "artistId",
      foreignField: "_id",
      as: "artistInfo"
    }
  },
  {
    $unwind: "$artistInfo"
  },
  {
    $project: {
      _id: 1,
      title: 1,
      releaseDate: 1,
      length: 1,
      position: 1,
      artistId: 1,
      artistName: "$artistInfo.name",
      artistGenre: "$artistInfo.genre",
      artistImage: "$artistInfo.image",
      artistBirthdate: "$artistInfo.birthdate",
      artistGender: "$artistInfo.gender"
    }
  }
])



